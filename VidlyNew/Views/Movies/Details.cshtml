@model VidlyNew.Models.Movie

@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>


<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.MovieReleaseDate.ToShortDateString()</li>
    <li>Date Added: @Model.MovieDateAdded.ToShortDateString()</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>