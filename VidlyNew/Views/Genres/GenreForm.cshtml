@model VidlyNew.ViewModels.GenreFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Request.Url.AbsoluteUri.Contains("New"))
{
    <h2>Add Genre</h2>
}
else
{
    <h2>Edit Genre</h2>
}

@using (Html.BeginForm("Save", "Genres"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")

    <div class="form-group">
        @Html.LabelFor(m => m.Genre.Name)
        @Html.TextBoxFor(m => m.Genre.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Genre.Name)
    </div>

    @Html.HiddenFor(m => m.Genre.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
