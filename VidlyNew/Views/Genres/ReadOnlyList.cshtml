@model IEnumerable<VidlyNew.Models.Genre>

@{
    ViewBag.Title = "Genres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<table id="genres" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>


@section scripts {

    <script>
        $(document).ready(function () {
            var table = $('#genres').DataTable({
                ajax: {
                    url: "/api/genres",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },

                ]

            });
        });
    </script>

}