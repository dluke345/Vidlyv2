@model IEnumerable<VidlyNew.Models.Game>

@{
    ViewBag.Title = "Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>


<table id="games" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Game</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>


@section scripts
{

    <script>
        $(document).ready(function() {
            var table = $('#games').DataTable({
                ajax: {
                    url: "/api/games",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, game) {
                            return "<a href='/games/details/" + game.id + "'>" + game.name + "</a>";
                        }
                    },
                    {
                        data: "genre.name"
                    }

                ]

            });
        });



    </script>
}
